@model IEnumerable<ikm.Models.ViewSession>

@{
    ViewData["Title"] = "Просмотры видео";
}

<h1>Просмотры видео</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa-solid fa-plus"></i> Добавить запись
    </a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Дата начала</th>
            <th>Время начала</th>
            <th>Дата окончания</th>
            <th>Время окончания</th>
            <th>Видео</th>
            <th>Платформа</th>
            <th>Время просмотра (сек)</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ActivationDate</td>
                <td>@item.ActivationTime</td>
                <td>@item.ShutdownDate</td>
                <td>@item.ShutdownTime</td>
                <td>@Html.DisplayFor(modelItem => item.Video.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Domain)</td>
                <td>@Html.DisplayFor(modelItem => item.ViewingTime)</td>
                <td>
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@item.ViewId" class="btn-table-edit" title="Редактировать">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.ViewId" class="btn-table-delete" title="Удалить">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>