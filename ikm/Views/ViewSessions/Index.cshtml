@model IEnumerable<ikm.Models.ViewSession>

@{
    ViewData["Title"] = "Просмотры видео";
}

<h1>История просмотров</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить запись</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Дата начала</th>
            <th>Время начала</th>
            <th>Дата окончания</th>
            <th>Время окончания</th>
            <th>Видео</th>
            <th>Платформа</th>
            <th>Время просмотра (сек)</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ActivationDate.ToShortDateString()</td>
                <td>@item.ActivationTime.ToShortTimeString()</td>
                <td>@item.ShutdownDate</td>
                <td>@item.ShutdownTime</td>
                <td>@Html.DisplayFor(modelItem => item.Video.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Domain)</td>
                <td>@Html.DisplayFor(modelItem => item.ViewingTime)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ViewId">Редактировать</a> |
                    <a asp-action="Delete" asp-route-id="@item.ViewId" class="text-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>