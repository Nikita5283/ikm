@model ikm.Models.AppSession

@{
    ViewData["Title"] = "Создание";
}

<h1>Добавить запись</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="ActivationDate" class="control-label"></label>
                <input asp-for="ActivationDate" type="date" class="form-control" />
                <span asp-validation-for="ActivationDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ActivationTime" class="control-label"></label>
                <input asp-for="ActivationTime" type="time" class="form-control" />
                <span asp-validation-for="ActivationTime" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ShutdownDate" class="control-label"></label>
                <input asp-for="ShutdownDate" type="date" class="form-control" />
                <span asp-validation-for="ShutdownDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ShutdownTime" class="control-label"></label>
                <input asp-for="ShutdownTime" type="time" class="form-control" />
                <span asp-validation-for="ShutdownTime" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProcessName" class="control-label"></label>
                <select asp-for="ProcessName" class="form-control" asp-items="ViewBag.ProcessName">
                    <option value="">Выберите приложение</option>
                </select>
                <span asp-validation-for="ProcessName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="WindowTitle" class="control-label"></label>
                <input asp-for="WindowTitle" class="form-control" />
                <span asp-validation-for="WindowTitle" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Назад</a>
            </div>
        </form>
    </div>
</div>