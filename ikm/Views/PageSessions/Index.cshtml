@model IEnumerable<ikm.Models.PageSession>

@{
    ViewData["Title"] = "Сессии использования страниц";
}

<h1>Сессии использования страниц</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa-solid fa-plus"></i> Добавить запись
    </a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Дата начала</th>
            <th>Время начала</th>
            <th>Дата окончания</th>
            <th>Время окончания</th>
            <th>Заголовок страницы</th>
            <th>Платформа</th>
            <th>Название браузера</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ActivationDate</td>
                <td>@item.ActivationTime</td>
                <td>@item.ShutdownDate</td>
                <td>@item.ShutdownTime</td>
                <td>@Html.DisplayFor(modelItem => item.PageTitle)</td>
                <td>@Html.DisplayFor(modelItem => item.Domain)</td>
                <td>@Html.DisplayFor(modelItem => item.BrowserName)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SessionId" class="btn btn-primary btn-sm" title="Редактировать">
                        <i class="fa-solid fa-pen-to-square"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.SessionId" class="btn btn-danger btn-sm" title="Удалить">
                        <i class="fa-solid fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>