@model ikm.Models.PageSession

@{
    ViewData["Title"] = "Новая сессия страницы";
}

<h1>Добавить сессию</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="ActivationDate" class="control-label"></label>
                <input asp-for="ActivationDate" type="date" class="form-control" />
                <span asp-validation-for="ActivationDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ActivationTime" class="control-label"></label>
                <input asp-for="ActivationTime" type="time" class="form-control" />
                <span asp-validation-for="ActivationTime" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ShutdownDate" class="control-label"></label>
                <input asp-for="ShutdownDate" type="date" class="form-control" />
                <span asp-validation-for="ShutdownDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ShutdownTime" class="control-label"></label>
                <input asp-for="ShutdownTime" type="time" class="form-control" />
                <span asp-validation-for="ShutdownTime" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PageTitle" class="control-label"></label>
                <input asp-for="PageTitle" class="form-control" />
                <span asp-validation-for="PageTitle" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="BrowserName" class="control-label">Браузер</label>
                <select asp-for="BrowserName" class="form-control" asp-items="ViewBag.BrowserName">
                    <option value="">Выберите браузер</option>
                </select>
                <span asp-validation-for="BrowserName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Domain" class="control-label">Домен сайта</label>
                <select asp-for="Domain" class="form-control" asp-items="ViewBag.Domain">
                    <option value="">Выберите сайт</option>
                </select>
                <span asp-validation-for="Domain" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Назад</a>
            </div>
        </form>
    </div>
</div>