@model ikm.Models.App

@{
    ViewData["Title"] = "Удаление";
}

<h1>Вы уверены, что хотите удалить это приложение?</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Процесс</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ProcessName)</dd>

        <dt class="col-sm-2">Название</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.BaseName)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProcessName" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </form>
</div>