@model IEnumerable<ikm.Models.App>

@{
    ViewData["Title"] = "Список приложений";
}

<h1>Приложения</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить новое</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Процесс (ID)</th>
            <th>Название</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ProcessName)</td>
                <td>@Html.DisplayFor(modelItem => item.BaseName)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProcessName">Редактировать</a> |
                    <a asp-action="Delete" asp-route-id="@item.ProcessName" class="text-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>