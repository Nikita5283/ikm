@model IEnumerable<ikm.Models.Video>

@{
    ViewData["Title"] = "Справочник видео";
}

<h1>Справочник видео</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa-solid fa-plus"></i> Добавить видео
    </a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id видео(из URL видео)</th>
			<th>Название видео</th>
            <th>Автор</th>
            <th>Длительность (сек)</th>
            <th style="width: 150px;">Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.VideoId)</td>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Author)</td>
                <td>@Html.DisplayFor(modelItem => item.VideoDuration)</td>
                <td>
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@item.VideoId" class="btn-table-edit" title="Редактировать">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.VideoId" class="btn-table-delete" title="Удалить">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>