@model ikm.Models.Video

@{
    ViewData["Title"] = "Удаление";
}

<h1>Удаление</h1>
<h3>Вы уверены, что хотите удалить это видео?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Название</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>

        <dt class="col-sm-2">Автор</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Author)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="VideoId" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </form>
</div>