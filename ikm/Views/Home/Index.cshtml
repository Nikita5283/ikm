@{
    ViewData["Title"] = "Дашборд";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Панель управления</h1>
</div>

<h4 class="mb-3 text-muted small text-uppercase">Справочники</h4>
<div class="row g-4 mb-4">

    <div class="col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm border-0 border-start border-4 border-info dashboard-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase mb-1">Каталог</h6>
                        <h4 class="fw-bold mb-0">Приложения</h4>
                    </div>
                    <div class="bg-info bg-opacity-10 p-3 rounded-circle">
                        <i class="fa-brands fa-windows fa-2x text-info"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a asp-controller="Apps" asp-action="Index" class="btn btn-sm btn-outline-info w-100">Перейти</a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm border-0 border-start border-4 border-primary dashboard-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase mb-1">Каталог</h6>
                        <h4 class="fw-bold mb-0">Сайты</h4>
                    </div>
                    <div class="bg-primary bg-opacity-10 p-3 rounded-circle">
                        <i class="fa-solid fa-globe fa-2x text-primary"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a asp-controller="Sites" asp-action="Index" class="btn btn-sm btn-outline-primary w-100">Перейти</a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm border-0 border-start border-4 border-danger dashboard-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase mb-1">Каталог</h6>
                        <h4 class="fw-bold mb-0">Видео</h4>
                    </div>
                    <div class="bg-danger bg-opacity-10 p-3 rounded-circle">
                        <i class="fa-brands fa-youtube fa-2x text-danger"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a asp-controller="Videos" asp-action="Index" class="btn btn-sm btn-outline-danger w-100">Перейти</a>
                </div>
            </div>
        </div>
    </div>
</div>

<h4 class="mb-3 text-muted small text-uppercase">Журналы активности</h4>
<div class="row g-4 mb-4">

    <div class="col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm border-0 border-start border-4 border-secondary dashboard-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase mb-1">История</h6>
                        <h4 class="fw-bold mb-0">Запуски ПО</h4>
                    </div>
                    <div class="bg-secondary bg-opacity-10 p-3 rounded-circle">
                        <i class="fa-solid fa-window-restore fa-2x text-secondary"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a asp-controller="AppSessions" asp-action="Index" class="btn btn-sm btn-outline-secondary w-100">Открыть журнал</a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm border-0 border-start border-4 border-success dashboard-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase mb-1">История</h6>
                        <h4 class="fw-bold mb-0">Веб-серфинг</h4>
                    </div>
                    <div class="bg-success bg-opacity-10 p-3 rounded-circle">
                        <i class="fa-solid fa-clock-rotate-left fa-2x text-success"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a asp-controller="PageSessions" asp-action="Index" class="btn btn-sm btn-outline-success w-100">Открыть журнал</a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm border-0 border-start border-4 border-warning dashboard-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase mb-1">История</h6>
                        <h4 class="fw-bold mb-0">Просмотры</h4>
                    </div>
                    <div class="bg-warning bg-opacity-10 p-3 rounded-circle">
                        <i class="fa-solid fa-eye fa-2x text-warning"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a asp-controller="ViewSessions" asp-action="Index" class="btn btn-sm btn-outline-warning w-100">Открыть журнал</a>
                </div>
            </div>
        </div>
    </div>
</div>