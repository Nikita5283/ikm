@model ikm.Models.Site

@{
    ViewData["Title"] = "Удаление";
}

<h1>Удаление</h1>
<h3>Вы уверены, что хотите удалить этот сайт?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Домен</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Domain)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Domain" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </form>
</div>