@model IEnumerable<ikm.Models.Site>

@{
    ViewData["Title"] = "Справочник сайтов";
}

<h1>Справочник сайтов</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa-solid fa-plus"></i> Добавить сайт
    </a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Домен</th>
            <th style="width: 150px;">Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Domain)</td>
                <td>
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@item.Domain" class="btn-table-edit" title="Редактировать">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Domain" class="btn-table-delete" title="Удалить">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>